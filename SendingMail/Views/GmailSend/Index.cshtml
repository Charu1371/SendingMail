@model SendingMail.Models.EmailClass

@{
    ViewBag.Title = "Send Mail Using Gmail";
}

<h2>Send Mail to Your Gmail Account</h2>
<br />
<br />
<br />
@using (Html.BeginForm("SaveData", "GmailSend", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table cellpadding="4">
        <tr>
            <td>To:   </td>
            <td>@Html.TextBoxFor(model => model.SendTo, new { cols = "25" })</td>
        </tr>
        <tr>
            <td><br /></td>
        </tr>
        <tr>
            <td>Subject:  </td>
            <td>@Html.TextBoxFor(model => model.Subject, new { cols = "25" })</td>
        </tr>
        <tr>
            <td><br /></td>
        </tr>
        <tr>
            <td>Message:   </td>
            <td>@Html.TextAreaFor(model => model.Body, new { rows = "15", cols = "25" })</td>
        </tr>

        <tr>
            <td><br /></td>
        </tr>
        <tr>
            <td><input type="submit" class="btn btn-primary" value="Send Mail"></td>
        </tr>
    </table>
    <h1>@ViewBag.message</h1>
}


